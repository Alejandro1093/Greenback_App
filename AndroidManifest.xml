<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.ensalsaverde.apps.greenback"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applauncher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Styled" >
        <activity
            android:name="co.ensalsaverde.apps.greenback.Main"
            android:screenOrientation="portrait"
            android:label="@string/app_name"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.ensalsaverde.apps.greenback.Login"
            android:label="@string/app_name"
             android:icon="@drawable/alertdialogicon">    
             android:screenOrientation="portrait"            
                <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="co.ensalsaverde.apps.greenback.Fragment_1"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >                
                <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="co.ensalsaverde.apps.greenback.Fragment_2"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >                
                <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="co.ensalsaverde.apps.greenback.SendToDrive"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >                
                <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="co.ensalsaverde.apps.greenback.Goals"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >                
                <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="co.ensalsaverde.apps.greenback.Sources"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
                <category android:name="android.intent.category.INFO" />
        </activity>
    </application>

</manifest>